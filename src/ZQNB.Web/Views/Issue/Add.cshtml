@model ZQNB.Web.Models.IssueViewModel

@{
    ViewBag.Title = "Add";
}

<h2>Add Issue</h2>
@using (Html.BeginForm("Add", "Issue", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="保存" class="btn btn-default" />
        </div>
    </div>
}