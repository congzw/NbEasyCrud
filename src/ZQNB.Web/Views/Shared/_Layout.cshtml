<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>DEMO - @ViewBag.Title</title>
	<link href="~/Content/libs/bootstrap/bootstrap.css" rel="stylesheet" />
	@*<link href="~/Content/libs/bootstrap/ubuntu.theme.css" rel="stylesheet" />*@
	<link href="~/Content/css/Site.css" rel="stylesheet" />
</head>
<body ng-app="failtrackerApp">
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("All Issue", "Index", "Issue")</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="container body-content">
		<div class="container alert-container"></div>
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Easy CRUD DEMO</p>
		</footer>
	</div>
	<script src="~/Content/libs/jquery/jquery-1.10.2.js"></script>
    <script src="~/Content/libs/jquery/jquery.validate.js"></script>
	<script src="~/Content/libs/bootstrap/bootstrap.js"></script>
	<script src="~/Content/libs/rowlink.js"></script>
    <script src="~/Content/libs/underscore.js"></script>
    <script src="~/Content/scripts/bootstrapAlerts.js"></script>
	@Html.Partial("_Alerts")
	@RenderSection("scripts", required: false)
</body>

</html>
